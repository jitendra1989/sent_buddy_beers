<% content_for :head do %>
  <%= stylesheet_link_tag 'sites/buddybeers/sections/forms' %>
<% end %>

<div class="container corp-content" id="password"> 
  <div class="confirmation-main">
    <h1>Change your password</h1>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <p><%= f.label :password, "New password" %><br />
      <%= f.password_field :password, :placeholder => "Enter password", :class => "col-md-5 col-sm-7 col-xs-12" %></p>
      <div class="clearfix"></div><br/>
      
      <p><%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, :placeholder => "Enter password", :class => "col-md-5 col-sm-7 col-xs-12" %></p>
      <div class="clearfix"></div><br/>
      <p><%= f.submit "Change my password", :class => "btn" %></p>
    <% end %>

    <div class="row corp-links">
      <%= render :partial => "corporates/shared/links" %>
    </div>
  </div>
</div>