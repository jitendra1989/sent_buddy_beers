/ buddybeers > bars > bar

.row.search-result-row
  .col-md-5.col-xs-12.col-sm-5
    %h2= bar.try(:name)
    %p.address= bar.try(:full_address)
    = link_to bar.url, bar.url, :rel => "nofollow", :target => "_blank"
  .col-md-3.col-xs-12.right-top-margin.padd_right_none.col-sm-3
    %p
      = t(".price_range")
      %strong= price_range_for(bar)
    %p
      = t(".drink_specials")
      %strong= has_drink_specials?(bar)
  .col-md-4.col-xs-12.right-top-margin.col-sm-4
    / %button.btn.btn-warning.more-info-btn More info
    = link_to content_tag(:span, t(".more_info")), bar_url(bar), :class => 'btn btn-warning more-info-btn'
    / %button.btn.btn-warning.buy-drink-btn Buy A Buddy Drink
    = link_to content_tag(:span, t(".buy_a_beer")), new_iou_url(:bar_id => bar.id), :rel => "nofollow", :class => 'btn btn-warning buy-drink-btn'



