%h1
  = link_to(@page.parent.title, @page.parent.slug) + " >" if @page.parent
  = @page.title

= render "admin/dashboard/tabs" 

.tabs
  %ul
    %li= link_to 'Edit', edit_admin_page_path(@page)
    %li= link_to 'Back', admin_pages_path 
  = clear_floats

#page
  = render "options", :page => @page
  = raw RedCloth.new(@page.body, [:filter_html]).to_html