!!!XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => I18n.locale.to_s, :lang => I18n.locale.to_s } 
  %head
    %title= "#{@title.blank? ? controller.action_name : @title} - Buddy Drinks"
    = render 'layouts/meta'
    = csrf_meta_tag
    = render 'layouts/favicon'
    = stylesheet_link_tag 'reset', :media => "all"
    = stylesheet_link_tag 'sites/buddybeers/sections/apps', 'jquery.fancybox-1.3.1', 'fancybox'
    <!--[if lte IE 8]>
    = stylesheet_link_tag 'sites/buddybeers/ie7'
    %style(type="text/css" media="screen")= ".pie { position:relative; behavior: url(/PIE.htc); }"
    <![endif]-->
    = render 'layouts/javascripts'
    = javascript_include_tag "drink_feed"
    - unless I18n.locale.to_s == "th"
      :javascript
        Cufon.replace("h1, #sms h3, #phones #feed h2", {textShadow: '0px -1px #424349'});
    = yield(:head)
  
  %body
    = render 'shared/google_analytics'
    = render 'shared/facebook_sdk'
    #wrapper
      #container
        #header
          = render 'shared/logo'
          %h1= t(".slogan").html_safe
        #phones{:class => I18n.locale.to_s == "de" ? "de" : "en" }
          #feed
            = render "shared/drink_feed"
        = yield
        
