!!!
%html
  %head
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %link(rel="Shortcut Icon" href="/favicon.ico")
    %link(rel="icon" href="/favicon.ico")
    %title
      = @title.blank? ? controller.action_name : @title
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'sites/default/sections/admin', 'jquery.fancybox-1.3.1', 'fancybox'
    = csrf_meta_tag
    = javascript_include_tag 'jquery', 'jquery-ui', 'rails', 'jrails', 'jquery.quicksearch', 'jquery.fancybox-1.3.4.pack', 'jquery.easing-1.3.pack'
    = yield(:head)
  %body
    #container
      #logo= link_to image_tag("buddy-beers-logo.png", :alt => "Buddy Drinks Logo"), root_url
      = render "layouts/flash", :flash => flash
      #header
        #account
          %p
            = t("layouts.logged_in_as", :user => current_user)
            = link_to t("layouts.menu.logout"), destroy_user_session_url

        = clear_floats

      #content
        = yield
