!!!XML
!!!
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %title= "Buddy Drinks" #@title.blank? ? controller.action_name : @title
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %meta{ :name => "description", :content => t("layouts.meta.description") }
    %meta{ :name => "title", :content => (@title.blank? ? controller.action_name : @title) }
    - if is_device?('iphone')
      %meta{:name => "viewport", :content => "width=device-width, minimum-scale=1.0, maximum-scale=1.0" }
    - if is_device?('android')
      %meta{ :name => "viewport", :content => "width=device-width" }

    %link(rel="Shortcut Icon" href="/favicon.ico")
    %link(rel="icon" href="/favicon.ico")
    = stylesheet_link_tag 'mobile'
    :javascript
      var bb = {};
    = javascript_include_tag 'jquery', 'jquery-ui', 'rails', 'jrails', 'map', 'application','jquery.fancybox-1.3.4.pack', 'jquery.easing-1.3.pack'
    = yield(:head)

  %body
    = render 'shared/google_analytics.html'
    = yield

