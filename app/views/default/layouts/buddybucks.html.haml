%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => I18n.locale.to_s, :lang => I18n.locale.to_s } 
  %head
    %title= "BuddyBucks"
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %meta{ :name => "description", :content => "Pay with BuddyBucks" }
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{ :name => "title", :content => "BuddyBucks" }
    %meta{ :name => 'robots', :content => 'noindex, nofollow' }
    = csrf_meta_tag
    = stylesheet_link_tag 'reset', :media => "all"
    = stylesheet_link_tag 'sites/default/sections/buddybucks', :media => "all"
    :plain
      <!--[if lte IE 8]>
        <style type="text/css" media="screen">
          .pie { 
            position: relative;
            behavior: url(/PIE.htc); 
          }
        </style>
      <![endif]-->
    = render 'layouts/new_javascripts'
    = render 'layouts/new_stylesheets'
    = yield(:add_page_js_css)  
    = javascript_include_tag 'jquery', 'jquery-ui', 'rails', 'jrails'
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    = yield(:head)
  
  %body
    = render 'shared/google_analytics' 
    = render 'shared/facebook_sdk'
    %aside.search-top-row
      = render "/default/shared/buddy_header"
    %div.custom_flash.container
      = render '/default/shared/messages'
    = yield
    / - footer start
    = render "/default/shared/buddy_footer"
