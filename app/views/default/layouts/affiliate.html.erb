<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

  <head>

    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <%= csrf_meta_tag %>

    <title><%= @title.blank? ? controller.action_name : @title %></title>

    <!--                       CSS                       -->

    <!-- Reset Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/sites/default/admin/reset.css" type="text/css" media="screen" />

    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/sites/default/admin/style.css" type="text/css" media="screen" />

    <!-- Invalid Stylesheet. This makes stuff look pretty. Remove it if you want the CSS completely valid -->
    <link rel="stylesheet" href="/stylesheets/sites/default/admin/invalid.css" type="text/css" media="screen" />


    <!-- Colour Schemes

    Default colour scheme is green. Uncomment prefered stylesheet to use it.

    <link rel="stylesheet" href="resources/css/blue.css" type="text/css" media="screen" />

    <link rel="stylesheet" href="resources/css/red.css" type="text/css" media="screen" />

    -->
    <link rel="stylesheet" href="/stylesheets/sites/default/admin/orange.css" type="text/css" media="screen" />

    <!-- Internet Explorer Fixes Stylesheet -->

    <!--[if lte IE 7]>
      <link rel="stylesheet" href="/stylesheets/sites/default/admin/ie.css" type="text/css" media="screen" />
    <![endif]-->

    <!--                       Javascripts                       -->

    <script type="text/javascript">
      var bb = {};
    </script>

    <!-- jQuery -->
    <script type="text/javascript" src="/javascripts/jquery-1.3.2.min.js"></script>

    <!-- jQuery WYSIWYG Plugin -->
    <script type="text/javascript" src="/javascripts/jquery.wysiwyg.js"></script>

    <!-- jQuery Configuration -->
    <script type="text/javascript" src="/javascripts/simpla.jquery.configuration.js"></script>

    <!-- Facebox jQuery Plugin -->
    <script type="text/javascript" src="/javascripts/facebox.js"></script>


    <!-- Internet Explorer .png-fix -->

    <!--[if IE 6]>
      <script type="text/javascript" src="/javascripts/DD_belatedPNG_0.0.7a.js"></script>
      <script type="text/javascript">
        DD_belatedPNG.fix('.png_bg, img, li');
      </script>
    <![endif]-->

    <%= javascript_include_tag 'rails', 'jrails' %>

    <%= yield(:head) %>

  </head>

  <body>

    <%= render :partial => "shared/google_analytics" %>

    <div id="body-wrapper"> <!-- Wrapper for the radial gradient background -->

    <div id="sidebar"><div id="sidebar-wrapper"> <!-- Sidebar with logo and menu -->

      <h1 id="sidebar-title"><a href="<%= affiliate_root_url %>">Buddy Venue Admin</a></h1>

      <!-- Logo (221px wide) -->
      <h2><a href="<%= affiliate_root_url %>"><div style="color :#F99D1C; text-align: center; margin-top: 50px;">Buddy Venue</div></a></h2>
      <a href="<%= affiliate_root_url %>"><img style="margin-top: 10px;margin-left: 20px;" id="logo" src="/images/sites/default/admin/buddyDrinks-Logo.png" alt="Simpla Admin logo" /></a>

      <!-- Sidebar Profile links -->
      <div id="profile-links">
        Hello, <a title="<%= t("layouts.user_account_navigation.profile") %>"><%= current_user.to_s %></a>
        <% if content_for(:messages).present? %>
          , you have <a href="#messages" rel="modal" title="new messages">new messages</a>
        <% end %>
        <br />
        <br />
         <a href="<%= destroy_user_session_url %>" title="<%= t("layouts.user_account_navigation.logout") %>"><%= t("layouts.user_account_navigation.logout") %></a>
      </div>

      <%= render "affiliate/dashboard/menu" %>

      <%= render "affiliate/dashboard/messages" %>

    </div></div> <!-- End #sidebar -->

    <div id="main-content"> <!-- Main Content Section with everything -->

      <noscript> <!-- Show a notification if the user has disabled javascript -->
        <div class="notification error png_bg">
          <div>
            Javascript is disabled or is not supported by your browser. Please <a href="http://browsehappy.com/" title="Upgrade to a better browser">upgrade</a> your browser or <a href="http://www.google.com/support/bin/answer.py?answer=23852" title="Enable Javascript in your browser">enable</a> Javascript to navigate the interface properly.
          </div>
        </div>
      </noscript>

      <%= render "affiliate/dashboard/flash", :flash => flash %>

      <%= yield %>

      <div class="clear"></div>

      <div id="footer">
        <small>
            <%= t("footer.copyright", :date => Date.today.year.to_s).html_safe %> | <a href="#">Top</a>
        </small>
      </div><!-- End #footer -->

    </div> <!-- End #main-content -->

  </div></body>

</html>
