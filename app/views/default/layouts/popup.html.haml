%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => I18n.locale.to_s, :lang => I18n.locale.to_s } 
  %head
    %title= @title.blank? ? controller.action_name : @title
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %meta{ :name => "description", :content => @meta_description ? @meta_description : t("layouts.meta.description") }
    %meta{ :name => "title", :content => @title.blank? ? controller.action_name : @title }
    %meta{ :name => 'robots', :content => 'noindex, nofollow' }
    = csrf_meta_tag
    = stylesheet_link_tag 'reset', :media => "all"
    :plain
      <!--[if lte IE 8]>
        <style type="text/css" media="screen">
          .pie { 
            position: relative;
            behavior: url(/PIE.htc); 
          }
        </style>
      <![endif]-->
    = javascript_include_tag 'jquery', 'jquery-ui', 'rails', 'jrails'
    = yield(:head)
  
  %body
    = render 'shared/google_analytics'
    #container
      = yield