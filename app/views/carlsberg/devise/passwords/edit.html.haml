/ carlsberg > devise > passwords > edit

- @title = t(".title")
- stylesheets "sites/carlsberg/sections/forms"
- content_for :head do
  :javascript
    $(document).ready(function(){ $("label").inFieldLabels(); });
    
#password
  %h1= t(".heading")

  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = f.error_messages
    = f.hidden_field :reset_password_token

    %fieldset
      %ol
        %li
          = f.label :password, t("forms.labels.new_password")
          = f.password_field :password, :class => "pie"

        %li
          = f.label :password_confirmation, t("forms.labels.confirm_new_password")
          = f.password_field :password_confirmation, :class => "pie"

      %ul
        %li
          %button{ :type => "submit" }= content_tag(:span, t("forms.buttons.update"))
    
    =clear_floats