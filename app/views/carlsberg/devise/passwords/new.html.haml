- @title = t(".title")
- stylesheets "sites/carlsberg/sections/forms"
- content_for :head do
  :javascript
    $(document).ready(function(){ $("label").inFieldLabels(); });
    
#password
  %h1= t(".heading")

  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = f.error_messages
    %fieldset
      %h2= t(".legend")
      %ol
        %li
          = f.label :email
          = f.text_field :email, :class => "pie"

      %ul
        %li
          %button{ :type => "submit" }
            %span= t(".submit")
        %li= link_to t("forms.links.cancel"), new_session_path(resource_name)

    = clear_floats